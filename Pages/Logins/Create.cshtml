@page
@model Assignment1v3.Pages.Logins.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login.Name_First" class="control-label"></label>
                <input asp-for="Login.Name_First" class="form-control" />
                <span asp-validation-for="Login.Name_First" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login.Name_Last" class="control-label"></label>
                <input asp-for="Login.Name_Last" class="form-control" />
                <span asp-validation-for="Login.Name_Last" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login.Email_Username" class="control-label"></label>
                <input asp-for="Login.Email_Username" class="form-control" />
                <span asp-validation-for="Login.Email_Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login.Password" class="control-label"></label>
                <input asp-for="Login.Password" class="form-control" />
                <span asp-validation-for="Login.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login.Birth_Date" class="control-label"></label>
                <input asp-for="Login.Birth_Date" class="form-control" />
                <span asp-validation-for="Login.Birth_Date" class="text-danger"></span>
            </div>

            <div class="form-group" style="padding: 6px">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
