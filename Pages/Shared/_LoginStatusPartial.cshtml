@if (User.Identity.IsAuthenticated){
    <ul class="navbar-nav flex-grow-1 me-auto">
        <li>
            <span class="navbar-brand">
                Welcome @User.Identity.Name
            </span>
        </li>
        <li>
            <a class="nav-link" asp-page="/Profile">Profile</a>
        </li>
        <li>
            <form method="post" class="form-inline" asp-page="/Account/Logout">
                <button type="submit" class="btn btn-link ml-2">Logout</button>
            </form>
        </li>
    </ul>
    
    
    
}
else
{
    <ul class="navbar-nav flex-grow-1 me-auto">
		<a class="btn btn-link" asp-page="/Account/Login">Login</a>
		<a class="btn btn-link" asp-page="/Logins/Create">Sign Up</a> <!-- Added this line for Sign Up -->
    </ul>

}