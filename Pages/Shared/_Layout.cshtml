@using System.Security.Claims;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AssignmentLogin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Assignment1v3.styles.css" asp-append-version="true" />

    <style>
        .nav-item {
            background-color: #05445E;
            margin:3px;
            border-radius: 25px;

        }
        .cust-contain{
            max-width: 100%;
            width: 100%;
            margin-right: 2px;
            margin-left: 2px;
            min-height: 70px;
            background-color: #D4F1F4;
            
        }
        .footer{
            background-color: #D4F1F4;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="padding: 0px;">
            <div class="container cust-contain" >
                <a class="navbar-brand"  asp-area="" asp-page="/Logins/Index" >LoginsList</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                   
                        <!--Need one-->
                        <div class="mr-2">
                            <partial name="_StudentStatus" />
                        </div>
                        <div class="mr-2">
                            <partial name="_InstructorStatus" />
                        </div>
                    <div class="mr-2">
                        <partial name="_LoginStatusPartial" />
                    </div>
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Assignment1v3
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>