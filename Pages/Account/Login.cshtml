@page
@model Assignment1v3.Pages.Account.LoginModel
@{
}
<style>
    .row{
        margin: 8px;
    }
</style>
<div class="container border" style="padding:15px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-goup row">
            <div class="col-1">
                <label asp-for="Credential.Username"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Credential.Username" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Credential.Username"/>
        </div>
        <div class="form-goup row">
            <div class="col-1">
                <label asp-for="Credential.Password"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Credential.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Credential.Password" />
        </div>
        <div class="form-goup row">
            <div class="col-1">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
        </div>
    </form>
</div>