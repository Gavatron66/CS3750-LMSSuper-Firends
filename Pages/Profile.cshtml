@page
@model Assignment1v3.Pages.ProfileModel

@{
    ViewData["Title"] = "Profile";
}
<style>
    .DispProfPic{
        float: right;
        margin: 5px;
        width: 150px;
        height: 150px;
        border: 2px solid #75E6DA;
    }
    .custdiv{
        float: right;
        margin: 5px;
        width: 150px;
        height: 150px;
    }

    .ProfPicUpdate{
        margin: 5px;
    }

    .link-text {
        color: #189AB4;
        text-decoration: underline;
    }

    
    .link-input {
        display: none; /* Initially hide the inputs */
    }

    
    .link-field.editable .link-text {
        display: none;
    }

    .link-field.editable .link-input {
        display: block;
    }

    .cust-btn{
        margin: 5px;
        background-color: #05445E;
    }

    .col-md-4{
        float: left;
    }
</style>
<h1>Profile</h1>

<div class="custdiv">
    <img src="@Url.Content("~/profilePictures/" + Model.Login.ProfilePicturePath)" class="DispProfPic" />        
    
    <form method="post" enctype="multipart/form-data" class="ProfPicUpdate">
        <input type="file" id="fileInput" name="imageFile" accept="image/*" />
        <br/>
        <button type="submit" class="btn cust-btn btn-primary ProfPicUpdate">Upload</button>
    </form>
</div>

<h4>Welcome, @Model.Login.Name_First !</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Login.Id" />
            
            <div class="form-group">
                <label asp-for="Login.Name_First" class="control-label"></label>
                <input id="fname" readonly asp-for="Login.Name_First" class="form-control" />
                <span asp-validation-for="Login.Name_First" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login.Name_Last" class="control-label"></label>
                <input id="lname" readonly asp-for="Login.Name_Last" class="form-control" />
                <span asp-validation-for="Login.Name_Last" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login.Email_Username" class="control-label"></label>
                <input id="email" readonly asp-for="Login.Email_Username" class="form-control" />
                <span asp-validation-for="Login.Email_Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login.Password" class="control-label"></label>
                <input id="password" readonly type="password" asp-for="Login.Password" class="form-control" />
                <span asp-validation-for="Login.Password" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="Login.Bio" class="control-label"></label>
                <input id="bio" readonly asp-for="Login.Bio" class="form-control" />
                <span asp-validation-for="Login.Bio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login.AddressLine1" class="control-label"></label>
                <input id="addr1" readonly asp-for="Login.AddressLine1" class="form-control" />
                <span asp-validation-for="Login.AddressLine1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login.AddressLine2" class="control-label"></label>
                <input id="addr2" readonly asp-for="Login.AddressLine2" class="form-control" />
                <span asp-validation-for="Login.AddressLine2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login.City" class="control-label"></label>
                <input id="city" readonly asp-for="Login.City" class="form-control" />
                <span asp-validation-for="Login.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login.State" class="control-label"></label>
                <input id="state" readonly asp-for="Login.State" class="form-control" />
                <span asp-validation-for="Login.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login.PostalCode" class="control-label"></label>
                <input id="zip" readonly asp-for="Login.PostalCode" class="form-control" />
                <span asp-validation-for="Login.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login.PhoneNumber" class="control-label"></label>
                <input id="phone" readonly asp-for="Login.PhoneNumber" class="form-control" />
                <span asp-validation-for="Login.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group link-field">
                <label asp-for="Login.Link1" class="control-label"></label>
                <a  readonly href="Login.Link1" class="form-control link-text">@Model.Login.Link1</a>
                <input id="link1" readonly asp-for="Login.Link1" class="form-control link-input" />
                <span asp-validation-for="Login.Link1" class="text-danger"></span>
            </div>

            <div class="form-group link-field">
                <label asp-for="Login.Link2" class="control-label"></label>
                <a  readonly href="Login.Link2" class="form-control link-text">@Model.Login.Link2</a>
                <input id="link2" readonly asp-for="Login.Link2" class="form-control link-input" />
                <span asp-validation-for="Login.Link2" class="text-danger"></span>
            </div>

            <div class="form-group link-field">
                <label asp-for="Login.Link3" class="control-label"></label>
                <a  readonly href="Login.Link3" class="form-control link-text">@Model.Login.Link3</a>
                <input id ="link3" readonly asp-for="Login.Link3" class="form-control link-input" />
                <span asp-validation-for="Login.Link3" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" id="saveButton" value="Save" class="btn cust-btn btn-primary" style="display:none"/>
            </div>
            <div class="form-group">
                <input type="button" id="editButton" value="Edit" class="btn cust-btn btn-primary" />
            </div>


        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // When the "Edit" button is clicked
            $("#editButton").click(function () {
                $(".link-field").addClass("editable");
                $("#fname").removeAttr("readonly");   
                $("#lname").removeAttr("readonly");
                $("#password").removeAttr("readonly");
                $("#bio").removeAttr("readonly");
                $("#addr1").removeAttr("readonly");
                $("#addr2").removeAttr("readonly");
                $("#city").removeAttr("readonly");
                $("#state").removeAttr("readonly");
                $("#zip").removeAttr("readonly");
                $("#phone").removeAttr("readonly");
                $("#link1").removeAttr("readonly");
                $("#link2").removeAttr("readonly");
                $("#link3").removeAttr("readonly");
                
                $("#saveButton").show();   
                
                $("#editButton").hide();
            });
        });
    </script>
}
