@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <form method="post">

        
        <div class="form-group">
            <label asp-for="Login.Email_Username">Enter your Email/Username<class="control-label"></label>
            <input asp-for="Login.Email_Username" class="form-control" />
            <span asp-validation-for="Login.Email_Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Login.Password">Enter your Password<class="control-label"></label>
            <input asp-for="Login.Password" class="form-control" />
            <span asp-validation-for="Login.Password" class="text-danger"></span>
        </div>
        <div class="container">
            <label>
                <input type="checkbox" checked="checked" name="remember"> Remember me
            </label>
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-primary" />
            <span class="psw">Forgot <a href="#">password?</a></span>
        </div>
        
    </form>
    <div class="container">
        <span>
            or sign up <a href="/Logins/Create">here</></a>.
        </span>
    </div>    
</div>
