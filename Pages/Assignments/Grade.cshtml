@page
@model Assignment1v3.Pages.Assignments.GradeModel
@{
    ViewData["Title"] = "Grading";
}

<h2>Assignment Name: @Model.AssignmentName</h2>

<form method="post">
    <div>
        <h3>Student Name: @Model.StudentName</h3>

        <p><strong>Max Points:</strong> @Model.Submission.maxPoints</p>

        <p><strong>Submission Type:</strong> @Model.Submission.submissionType</p>
        @if (Model.Submission.submissionType == "Text Box")
        {
            <div>
                <h4>Text Submission</h4>
                <textarea asp-for="Submission.TextBox" class="form-control"></textarea>
            </div>
        }
        else if (Model.Submission.submissionType == "File Upload")
        {
            <div>
                <h4>Download Uploaded File</h4>
                <label >@Model.Submission.Upload</label>
                <a href="~/Files/@Model.Submission.Upload" download>Download</a>
            </div>
        }
    </div>


    <div class="form-group">

        <label asp-for="Submission.PointsEarned" class="control-label"></label>
        <input asp-for="Submission.PointsEarned" class="form-control" />
        <span asp-validation-for="Submission.PointsEarned" class="text-danger"></span>
    </div>

    <input type="submit" value="Submit" class="btn btn-primary" style="margin-top: 20px" />
</form>